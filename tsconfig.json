{
  "compilerOptions": {
    "allowJs": false,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@app/*": ["app/*"]
    },
    "plugins": [
      {
        "transform": "ts-auto-mock/transformer",
        "cacheBetweenTests": false,
        "features": ["random"]
      }
    ],
    "types": ["react-native", "node", "@wdio/globals/types", "@wdio/mocha-framework", "@wdio/devtools-service", "@types/jest"],
  },
  "exclude": ["node_modules", "**/*.stories.tsx"],
  "include": ["app", "e2e", "__tests__", "test", ".storybook"],
  "extends": "@tsconfig/react-native/tsconfig.json"
}
