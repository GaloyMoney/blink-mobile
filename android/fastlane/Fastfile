# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:android)

platform :android do
  desc "Runs all the tests"
  lane :test do
    gradle(task: "test")
  end

  desc "Increment Build Number"
  lane :increment_build do
    gradle(task: 'incrementVersionCode', project_dir: './')
  end 

  desc "Submit a new Beta Build to Crashlytics Beta"
  lane :build do
    
    gradle(task: 'incrementVersionCode', project_dir: './')
    gradle(task: 'bundle', project_dir: './')
    # gradle(task: "clean assembleRelease", print_command: false)

    # sh "your_script.sh"
    # You can also use other beta testing services here
  end

  desc "Deploy a new version to both Play Store and Huawei Store"
  lane :beta do
    # build
    play_store_release
    # huawei_release
  end

  desc "Deploy a new version to the Google Play"
  lane :play_store_release do
    # crashlytics
    upload_to_play_store(
      track: "internal",
      skip_upload_changelogs: true,
      skip_upload_images: true,
      aab:'./app/build/outputs/bundle/release/app-release.aab'
    )
  end

  # desc "Deploy a new version to Huawei App Gallery"
  # lane :huawei_release do
  #   huawei_appgallery_connect(
  #     client_id: ENV["HUAWEI_CLIENT_ID"],
  #     client_secret: ENV["HAUWEI_CLIENT_SECRET"],
  #     app_id: ENV["HUAWEI_APP_ID"],
  #     apk_path: "./app/build/outputs/apk/release/app-release.apk",
  #     phase_wise_release: true,
  #     phase_release_percent: "1",
  #     phase_release_description: "Phased Release",
  #     submit_for_review: false
  #   )
  # end

  desc "Create Release APK"
  lane :build_apk do
    increment_build
    store_password = get_properties_value(
        key: "keystore_password",
        path: "fastlane/puravida-app.properties"
    )

    gradle(
      task: "assemble",
      build_type: "Release",
      print_command: false,
      properties: {
          "RELEASE_STORE_PASSWORD" => store_password
      },
      flags: "--no-daemon --max-workers=8 --stacktrace --info"
    )
  end

  desc "Deploy a new version to Firebase"
  lane :distribute_firebase do
   build_apk
       # build_android_app is a built-in fastlane action.
       firebase_app_distribution(
           app: "1:796001515981:android:b5aa2ab2617eaa7b7b2c84",
           groups: "internal-testers",
           release_notes: ""
       )
   end
#  desc "Promote Internal to Alpha"
#  lane :promote_internal_to_alpha do
#    upload_to_play_store(
#      track: 'internal',
#      track_promote_to: 'alpha',
#      version_code: 145,
#      skip_upload_changelogs: true,
#      skip_upload_images: true
#      )
#  end

end
