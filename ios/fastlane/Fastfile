# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  before_all do
    setup_circle_ci
  end

  
  desc "Push a new beta build to TestFlight"
  lane :beta do
    increment_build_number(xcodeproj: "GaloyApp.xcodeproj")
    # match(type: "appstore", readonly: is_ci)
    app_store_connect_api_key(
      key_id: "4CB2N65TA9",
      issuer_id: "0bce8c23-14b5-4e21-aaa3-4814ce4b6c19",
      key_filepath: "./fastlane/AuthKey_4CB2N65TA9.p8",
      in_house: false
    )

    # upload_to_testflight(changelog: "No changelog")
    
    build_app(workspace: "GaloyApp.xcworkspace", scheme: "GaloyApp",xcargs: "-allowProvisioningUpdates")
    upload_to_testflight
  end

  desc "End to end testing on browserstack"
  lane :browserstack do
    build_e2e
    upload_to_browserstack_app_automate(
      browserstack_username: ENV["BROWSERSTACK_USER"],
      browserstack_access_key: ENV["BROWSERSTACK_ACCESS_KEY"],
    )
    sh("GALOY_TOKEN=$GALOY_TOKEN && GALOY_TOKEN_2=$GALOY_TOKEN_2 && yarn test:browserstack:ios")
  end

  desc "increment path version"
  lane :increment do
    increment_version_number(bump_type: "patch")
  end

  desc "build ipa"
  lane :build_ipa do
    match(type: "development", readonly: is_ci)
    gym(scheme: "GaloyApp", export_method: "development", codesigning_identity: "Apple Development: David Borthwick (SU5SVAJAAL)")
  end

  desc "Build for end to end tests"
  lane :build_e2e do
    match(type: "appstore", readonly: is_ci)
    gym(scheme: "GaloyApp", include_bitcode: false)
  end

end
